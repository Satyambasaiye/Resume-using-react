@using EStoreWebApp.Entities;

<style>
    body {
        background-image: url('/images/11.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        font-family: Arial, sans-serif;
        @* color: #ffffff; *@
        margin: 0;
        padding: 20px;
         background-image: url('/images/1.jpg');
        background-size: cover; /* Adjust as needed */
        background-position: center; /* Adjust as needed */
        background-repeat: no-repeat;
    }
  

    h1 {
        text-align: center;
        color: #ffffff;
        margin-bottom: 20px;
    }

    table {
        width: 80%;
        border-collapse: collapse;
        margin: 20px auto;
        background-color: white;
        border-radius: 8px;
        overflow: hidden;
    }

    hr {
        border: none;
        height: 1px;
        background-color: #ffffff;
        margin: 20px 0;
    }

    th,
    td {
        border: 1px solid #ddd;
        padding: 12px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }

    tr:hover {
        background-color: #f5f5f5;
    }

    button {
        padding: 8px 12px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        text-decoration: none;
    }

    .btn-danger {
        background-color: #dc3545;
        color: white;
    }

    .btn-info {
        background-color: #17a2b8;
        color: white;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
    }

    .btn-success {
        background-color: #28a745;
        color: white;
        width: 80%;
        align-items: center;
        margin-left: 10%;
    }

    a {
        text-decoration: none;
        color: white;
    }
</style>

<body>
    <h1>Product List</h1>
    <hr />
    <form action="">
        <table>
            <thead>
                <tr>
                    <th>PId</th>
                    <th>Name</th>
                    <th>Action</th>
                    <th>Action</th>
                    <th>Action</th>
                </tr>
            </thead>
            @{
                foreach (Product p in Model)
                {
                    <tr>
                        <td>@p.PId</td>
                        <td>@p.Name</td>
                        <td>
                            <button class="btn btn-danger"><a href="/Product/Delete/@p.PId">Delete</a></button>
                        </td>
                        <td>
                            <button class="btn btn-info"><a href="/Product/Details/@p.PId">Details</a></button>
                        </td>
                        <td>
                            <button class="btn btn-primary"><a href="/Product/EditForm/@p.PId">Update</a></button>
                        </td>
                    </tr>
                }
            }
        </table>
        <button class="btn btn-success"><a href="/Product/AddForm">Add</a></button>
    </form>
</body>
